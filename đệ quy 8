import java.util.Scanner;

public class RecursiveSquareRoot {
    public static double calculateR(int n) {
        if (n == 0) {
            return 0;  // Khi n = 0, trả về 0
        } else if (n == 1) {
            return Math.sqrt(1);  // Khi n = 1, trả về sqrt(1)
        } else {
            return Math.sqrt(n + calculateR(n - 1));  // Đệ quy cho n > 1
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n;

        // Vòng lặp để đảm bảo n >= 0
        do {
            System.out.print("Nhập giá trị n (n >= 0): ");
            n = scanner.nextInt();
            if (n < 0) {
                System.out.println("Giá trị n phải lớn hơn hoặc bằng 0. Vui lòng nhập lại.");
            }
        } while (n < 0);

        double result = calculateR(n);
        System.out.println("Giá trị của R(" + n + ") là: " + result);
    }
}
