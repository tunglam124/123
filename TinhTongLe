package test1;
import java.util.*;
public class TinhTongLe {
    public static void main(String[] args) {
    	int sum = 0;
        Scanner x = new Scanner(System.in);
        System.out.println("Nháº­p n :");
        int n = x.nextInt();
        for(int i =0; i < n; i ++) {
        	if (i % 2 !=0) {
        		sum += i;
        	}
        }
        System.out.println("Tong : "+ sum);
    }
}
